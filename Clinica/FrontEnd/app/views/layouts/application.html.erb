<!DOCTYPE html>
<html>
  <head>
    <title>FrontEnd</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  		<div class="container">
			<% if @current_user %>
			Hola <%= @current_user.name %>
			<%= link_to 'Salir', logout_path, class: 'btn btn-danger'%>
			<% else %>
				<%= link_to 'Ingresar', login_path, class: 'btn btn-primary' %>
			<% end %>
		</div>
    <%= yield %>
  </body>
</html>
