<p id="notice"><%= notice %></p>

<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Type appointment</th>
      <th>Description</th>
      <th>User</th>
      <th>Doctor</th>
      <th>Estate</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= TypeAppointment.find(appointment.type_appointment_id).codigo %></td>
        <td><%= appointment.description %></td>
        <td><%= User.find(appointment.user_id).name %></td>
        <td><%= Doctor.find(appointment.doctor_id).name %></td>
        <td><%= Estate.find(appointment.estate_id).name %></td>
        <td><%= appointment.date %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
